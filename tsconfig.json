{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "esNext",
    "target": "es2015",
    "outDir": "build",
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "rax"]
  },
  "include": [
    "packages/*/src",
    "global.d.ts",
    "packages/*/types"
  ],
  "exclude": ["node_modules", "build", "public"]
}